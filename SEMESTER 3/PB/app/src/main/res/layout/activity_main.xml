<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F9"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">
    <!-- maca ini -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Aplikasi Kasir Sederhana"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItemNamePulsa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Pulsa - Rp. 10,000" />

        <EditText
            android:id="@+id/editTextQuantityPulsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Jumlah"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItemNameToken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="Token - Rp. 20,000" />

        <EditText
            android:id="@+id/editTextQuantityToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Jumlah"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItemNameEmoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:text="E-Money - Rp. 30,000" />

        <EditText
            android:id="@+id/editTextQuantityEmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Jumlah"
            android:inputType="number" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupMembership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButtonMember"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:buttonTint="#B51616"
            android:text="Membership (5% Diskon)" />

        <RadioButton
            android:id="@+id/radioButtonNonMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-Member" />
    </RadioGroup>

    <!-- Tombol untuk Total Bayar -->
    <Button
        android:id="@+id/buttonProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EAB5D0"
        android:text="Total Bayar" />

    <!-- TextView untuk menampilkan struk pembayaran -->
    <TextView
        android:id="@+id/textViewReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Tombol untuk Rincian Pembayaran -->

    <!-- TextView untuk menampilkan rincian pembayaran -->
    <Button
        android:id="@+id/buttonDetailPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BCE3BCBC"
        android:text="Rincian Pembayaran"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewDetailPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" /> <!-- Set defaultnya ke "gone" agar tidak terlihat saat aplikasi dijalankan -->

</LinearLayout>